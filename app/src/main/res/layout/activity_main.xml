<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.qiyue.myviewgroup.MainActivity">

    <com.example.qiyue.myviewgroup.CustomViewGroupFrame
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:text="按钮1"
            android:textSize="15sp"
            android:gravity="center"
            android:background="#af2d2d"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="100dp" />
        <TextView
            android:layout_width="100dp"
            android:text="按钮2"
            android:textSize="15sp"
            android:background="#16a4ae"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_height="100dp" />
        <TextView
            android:layout_width="100dp"
            android:text="按钮3"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:background="#2daf47"
            android:layout_height="100dp" />
        <TextView
            android:layout_width="100dp"
            android:text="按钮4"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:background="#9c2daf"
            android:layout_height="100dp" />
    </com.example.qiyue.myviewgroup.CustomViewGroupFrame>
</LinearLayout>
